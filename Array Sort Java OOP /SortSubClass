import java.util.Arrays;
import java.text.DecimalFormat;

public class SortSubClass implements SortInterface{
    private DecimalFormat df = new DecimalFormat("0.00");
    
    public void displayUnsorted(double[] arr){
        System.out.println("The unsorted values of array:");
        for(double val : arr){
            System.out.print(df.format(val) + ", ");
        }
        System.out.println();
    }
    
    public void displaySorted(double[] arr){
        double[] sortedArr = arr.clone();
        
        Arrays.sort(sortedArr);
        System.out.println("The sorted values of array:");
        for(int i = sortedArr.length - 1; i >= 0; i--){
            System.out.print(df.format(sortedArr[i]) + ", ");
        }
        System.out.println();
    }
    public double getSum(double[] arr){
        double sum = 0;
        for(double val : arr) sum += val;
        return sum;
    }
    
    public double getAverage(double[] arr){
        return arr.length == 0 ? 0: getSum(arr) / arr.length;
    }
    public double getLowest(double[] arr){
        double lowest = arr[0];
        for(double val : arr){
            if(val < lowest) lowest = val;
        }
        return lowest;
    }
}
