import java.util.Scanner;
import java.text.DecimalFormat;

public class Main {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
        DecimalFormat df = new DecimalFormat("0.00");
        SortSubClass processor = new SortSubClass();

        int size = 0;

        while (true) {
            System.out.print("Enter array size: ");
            String input = sc.next();

            try {
                size = Integer.parseInt(input);
                if (size <= 0) {
                    System.out.println("Size must be greater than 0!");
                    continue;
                }
                break;
            } catch (NumberFormatException e) {
                System.out.println("Invalid array size!");
            }
        }

        double[] arr = new double[size];

        for (int i = 0; i < size; i++) {
            while (true) {
                System.out.print("Enter value at array index " + i + ": ");
                String input = sc.next();

                try {
                    arr[i] = Double.parseDouble(input);
                    break;
                } catch (NumberFormatException e) {
                    System.out.println("Invalid array value!");
                }
            }
        }

        processor.displayUnsorted(arr);
        processor.displaySorted(arr);

        System.out.println("The sum of the values is : " + df.format(processor.getSum(arr)));
        System.out.println("The average value is : " + df.format(processor.getAverage(arr)));
        System.out.println("The lowest value is : " + df.format(processor.getLowest(arr)));

        sc.close();
    }
}
